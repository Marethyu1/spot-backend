{
    "env": {
        "browser": true,
        "commonjs": true,
        "jest": true,
        "es6": true
    },
//    "extends": "airbnb-base",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "semi": [
            2,
            "never"
        ],
        "comma-dangle": ["error", "never"],
        "indent": ["error", 2],
        "no-await-in-loop": 0,
        "prefer-const": 2
//        "camelcase": ["error", {"properties": "never" }]
    }
}
